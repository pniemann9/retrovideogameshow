<h1>Les Jeux</h1>

<%= link_to "Add a new videogame", new_videogame_path %>

<% @videogames.each do |game| %>
    <h2><%= game.name %></h2>
    <p><%= game.description %></p>
    <p><%= game.price %>$</p>
    <%= link_to "Aller voir", videogame_path(game) %>
    <%= link_to "Delete", videogame_path(game), method: :delete %>
<%end%>