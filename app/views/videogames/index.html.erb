<div class="container">
  <h1>Les Jeux</h1>
  <div class="cards">
    <% @videogames.each do |game| %>
      <div class="card">
      <%= link_to videogame_path(game), :action => 'go' do%>
        <div class="card-game">
          <img class="top-img" src="<%=game.image%>" alt="">
          <div class="card-game-infos">
            <div>
              <h2><%= game.name %></h2>
              <p><%= game.description %></p>
              <p><%= game.price %>$</p>
            </div>
          </div>
        <%end%>
        </div>
      </div>
    <%end%>
  </div>
</div>


